<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" 
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="cordova.plugin.usbprint" 
        version="1.0.0">

    <name>UsbPRINT</name>

    <engines>
        <engine name="cordova" version=">=8.0.0"/>
    </engines>

    <js-module name="UsbPRINT" src="www/UsbPRINT.js">
        <clobbers target="cordova.plugins.UsbPRINT" />
    </js-module>

    <!-- android -->
    <platform name="android">

        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="UsbPRINT">
                <param name="android-package" value="cordova.plugin.usbprint.UsbPRINT" />
            </feature>
        </config-file>

        <!-- <config-file parent="/*" target="AndroidManifest.xml" /> -->
        <source-file src="src/android/UsbPRINT.java" target-dir="src/cordova/plugin/usbprint/UsbPRINT" />
        <source-file src="src/android/PrinterFunctions.java" target-dir="libs" />
        <source-file src="src/android/PrinterFunctionsLAN.java" target-dir="libs" />
        
    </platform>

</plugin>